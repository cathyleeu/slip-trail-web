{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "./app/components/*"
      ],
      "@components": [
        "./app/components/index"
      ],
      "@utils/*": [
        "./app/utils/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@python/*": [
        "./python/*"
      ],
      "@hooks/*": [
        "./app/hooks/*"
      ],
      "@hooks": [
        "./app/hooks/index"
      ],
      "@context/*": [
        "./app/context/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@lib": [
        "./lib/index"
      ],
      "@types": [
        "./types/index"
      ],
      "@types/*": [
        "./types/*"
      ],
      "@store/*": [
        "./store/*"
      ],
      "@store": [
        "./store/index"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.mts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
